
@model ModalViewModel 
<div class="modal fade" id="@{@Model.id}"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.title</h5>
                <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input hidden id="servingId"/>
                    <div class="form-group">
                        <label for="@{@Model.mealId}" class="col-form-label">ארוחה</label>
                        <select class="form-control" id="@{@Model.mealId}" name="@{@Model.mealId}" value="0">
                            <option value="0">
                                ארוחת בוקר
                            </option>
                            <option value="1">
                                ארוחת צהרים
                            </option>
                            <option value="2">
                                ארוחת ערב
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="@{@Model.nameId}" class="col-form-label">שם המנה</label>
                        <input class="form-control" id="@{@Model.nameId}" name="@{@Model.nameId}">
                        <span id="@{@Model.nameErrorId}" style="display: none;" class="text-danger">שדה חובה</span>
                    </div>
                    <div class="form-group">
                        <label for="@{@Model.priceId}" class="col-form-label">מחיר</label>
                        <input min="0" type="number" class="form-control" id="@{@Model.priceId}" name="@{@Model.priceId}">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">ביטול</button>
                <button id="@{@Model.submitId}" type="button" class="btn btn-primary">@Model.submitTxt</button>
            </div>
        </div>
    </div>
</div>
